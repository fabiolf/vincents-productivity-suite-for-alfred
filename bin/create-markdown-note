#!/usr/bin/env ruby
#
# Creates a new, empty note on disk and returns its location
#
# Requires one argument: the title of the note
#  (if there are multiple arguments, these are joined together)
# Output: the name of the file that was created

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'vps'

VPS::Alfred.action do
  note = VPS::Markdown::Note.new(ARGV.join(' '))
  note.create_file
end
