#!/usr/bin/env ruby
#
# Lists all actions that can be performed on a single Contact

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'vps'

Alfred.filter do
  raise 'No contact specified' if ENV['id'].nil?
  contact = {
    id: ENV['id'],
    name: ENV['name'],
    email: ENV['email']
  }
  Contacts.actions(contact)
end
