#!/usr/bin/env ruby
#
# Creates a new e-mail message using the area's preferred mail client
#
# Requires three environment variables to be present:
#   name: the name of the contact
#   email: the e-mail address of the contact

require_relative '../lib/alfred_helper'
require_relative '../lib/contacts'

Alfred.action do
  raise 'No email address specified' if ENV['name'].nil? || ENV['email'].nil?
  Contacts.create_email(name: ENV['name'], email: ENV['email'])
end