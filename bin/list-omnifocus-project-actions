#!/usr/bin/env ruby
#
# Lists all actions that can be performed on a single OmniFocus project

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'alfred_helper'
require 'omnifocus/omnifocus_plugin'

Alfred.filter do
  raise 'No project specified' if ENV['id'].nil?
  OmniFocusPlugin.actions(
    id: ENV['id'],
    name: ENV['name']
  )
end
