#!/usr/bin/env ruby
#
# Lists all actions that can be performed on a single OmniFocus project

require_relative '../lib/alfred_helper'
require_relative '../lib/omnifocus/omnifocus_plugin'

Alfred.filter do
  raise 'No project specified' if ENV['id'].nil?
  OmniFocusPlugin.actions(
    id: ENV['id'],
    name: ENV['name']
  )
end
