#!/usr/bin/env ruby
#
# Opens a note for editing in the preferred editor
#
# Requires one argument: the path to the note

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'vps'

VPS::OutputFormatter::Alfred.format do
  raise 'No path specified' if ARGV.empty?
  VPS::Markdown.edit_note(ARGV[0].chomp)
end
