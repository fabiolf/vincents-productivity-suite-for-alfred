#!/usr/bin/env ruby
#
# Searches all notes for a certain text
#
# Requires one argument: the text to search for

$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'vps'

puts VPS::OutputFormatter::Alfred.format {
  raise 'No search criteria specified' if ARGV.empty?
  VPS::Markdown.search_notes(ARGV.join(' '))
}
